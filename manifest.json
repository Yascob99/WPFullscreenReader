{
"manifest_version": 2,

"name": "Wordpress Fullscreen Reader",
"description": "Displays wordpress pages and posts in fullscreen mode for easier reading.",
"version": "0.8.1",
"background" : {
    "persistent": false,
    "scripts": ["bg.js"]
},
"options_page": "options.html",
"browser_action": {
"default_icon": "icon.png",
"default_title": "Go Fullscreen"
},
"permissions": ["activeTab", "http://*/", "https://*/","storage", "webNavigation"],
"web_accessible_resources": ["fullscreen.css"]

}
